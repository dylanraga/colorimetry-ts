{
	"compilerOptions": {
		"target": "ES2019",
		"module": "CommonJS",
		"declaration": true,
		"sourceMap": true,
		"outDir": "build",
		"lib": ["ES2019", "DOM"],
    //"allowJs": true,
    //"checkJs": false,
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
