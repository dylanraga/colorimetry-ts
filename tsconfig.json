{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"declaration": true,
		"sourceMap": true,
		"outDir": "build",
		"lib": ["ESNext", "DOM"],
		//"allowJs": true,
		//"checkJs": false,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true
	},
	"exclude": ["node_modules", "build", "test"],
	"ts-node": {
		"esm": true
	}
}
